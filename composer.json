{
    "name": "novomirskoy/worker",
    "description": "Расширяемая абстракция для долгоживущих процессов",
    "license": "MIT",
    "authors": [
        {
            "name": "Endin Artyom",
            "email": "artyom.endin@gmail.com"
        }
    ],
    "require": {
        "php": "^7.2 || ^8.0",
        "ext-pcntl": "*",
        "psr/log": "^1.0 || ^2.0"
    },
    "require-dev": {
        "ext-mbstring": "*",
        "friendsofphp/php-cs-fixer": "^3.0",
        "overtrue/phplint": "^3.2 || ^4.5",
        "phpunit/phpunit": "^8.0",
        "roave/security-advisories": "dev-latest"
    },
    "autoload": {
        "psr-4": {
            "Novomirskoy\\Worker\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Novomirskoy\\Worker\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "test": "phpunit --colors=always",
        "coverage": "XDEBUG_MODE=coverage phpunit --colors=always --coverage-html var/cache/phpunit/coverage-report",
        "lint": "phplint",
        "php-cs-fixer": "php-cs-fixer fix --config=.php-cs-fixer.php --allow-risky=yes"
    }
}
